  journal      = "IEEE Communications Magazine",
  volume       = "accepted for publication",

  textVersion  = paste("Iñaki Ucar, José Alberto Hernández, Pablo Serrano and Arturo Azcorra (2018).",
                       "Design and Analysis of 5G Scenarios with simmer: An R Package for Fast DES Prototyping.",
                       "IEEE Communications Magazine, accepted for publication.")
)
